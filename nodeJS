 		*/
 		res.end();
 	}).listen(300, 'localhost');

 	function getMine(extname) {
 		switch(extname){
 			case: '.html':
 				return "text/html";
 				break;
 			case: '.jpg':
 				return "image/jpg";
 				break;
 			case: '.css':
 				return 'text/css';
 				break;
 		}
 	}
